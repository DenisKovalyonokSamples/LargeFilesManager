<Window x:Class="LFM.FileSorter.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i18n="clr-namespace:Lepo.i18n.Wpf;assembly=Lepo.i18n.Wpf"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LFM.FileSorter.UI"
        ResizeMode="NoResize"
        WindowState="Normal"
        mc:Ignorable="d"
        Title="Large Files Parser" Height="340" Width="800"
             Style="{StaticResource CustomWindowStyle}">
    <Window.Resources>
        <DropShadowBitmapEffect x:Key="NormalShadow" ShadowDepth="2" Softness="0.2" Opacity="0.64"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <GroupBox x:Name="groupBox" Header="File Information" Margin="10,10,10,-20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="{i18n:StringLocalizer 'Input File'}" HorizontalAlignment="Right" />

                    <TextBox Grid.Row="0" Grid.Column="1" Name="SelectedFolderText" Width="550" Height="22"
                    Text="{Binding FilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <Button Grid.Row="0" Grid.Column="2" Name="BrowseFolderButton" Height="22" 
                    Command="{Binding BrowseFolderCommand}" Margin="5,2,-6,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{i18n:StringLocalizer 'Select File'}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Label Grid.Row="1" Grid.Column="0" Content="{i18n:StringLocalizer 'Output File'}" HorizontalAlignment="Right" />

                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBox Name="TextFileNameBox" Text="{Binding FileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="550" Height="22" />
                    </StackPanel>
                </Grid>
            </GroupBox>
            <StackPanel VerticalAlignment="Top">
                <Button Grid.Row="2" Grid.Column="1" Name="GenerateFileButton" Height="22" Width="120" HorizontalAlignment="Right" VerticalAlignment="Top"
                Command="{Binding BrowseFolderCommand}" Margin="5,35,10,2" Background="Green">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{i18n:StringLocalizer 'Sort Text File'}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <GroupBox x:Name="groupBoxone" Header="Sorting progress" Margin="10,10,10, 20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="{i18n:StringLocalizer 'Duration'}" HorizontalAlignment="Right" />
                        <Label Grid.Row="0" Grid.Column="1" Content="{i18n:StringLocalizer '0:00:06:18:927'}" HorizontalAlignment="Left" />

                        <Label Grid.Row="1" Grid.Column="0" Content="{i18n:StringLocalizer 'File Parts'}" HorizontalAlignment="Right" />
                        <Label Grid.Row="1" Grid.Column="1" Content="{i18n:StringLocalizer '1 of 32 file parts has been sorted.'}" HorizontalAlignment="Left" />

                        <Label Grid.Row="2" Grid.Column="0" Content="{i18n:StringLocalizer 'Size'}" HorizontalAlignment="Right" />
                        <Label Grid.Row="2" Grid.Column="1" Content="{i18n:StringLocalizer '99,43 GB / 100 GB'}" HorizontalAlignment="Left" />

                        <Label Grid.Row="3" Grid.Column="0" Content="{i18n:StringLocalizer 'Progress'}" HorizontalAlignment="Right" />
                        <ProgressBar Grid.Row="3" Grid.Column="1" Background="Green" VerticalAlignment="Center" Height="8" Width="550" Visibility="{Binding ProgressBarVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
