<UserControl x:Class="LFM.Core.Controls.ProgressPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LFM.Core.Controls"             
      xmlns:i18n="clr-namespace:Lepo.i18n.Wpf;assembly=Lepo.i18n.Wpf"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="105" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="{i18n:StringLocalizer 'Duration'}" HorizontalAlignment="Right" />
        <Label Grid.Row="0" Grid.Column="1" Content="{Binding ProgressBarElapsed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" />

        <Label Grid.Row="1" Grid.Column="0" Content="{i18n:StringLocalizer 'File Parts'}" HorizontalAlignment="Right" />
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ProgressBarSatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" MaxWidth="560"/>

        <Label Grid.Row="2" Grid.Column="0" Content="{i18n:StringLocalizer 'Size'}" HorizontalAlignment="Right" />
        <Label Grid.Row="2" Grid.Column="1" Content="{Binding ProgressBarValueString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" />

        <Label Grid.Row="3" Grid.Column="0" Content="{i18n:StringLocalizer 'Progress'}" HorizontalAlignment="Right" />

        <ProgressBar Visibility="{Binding ProgressBarVisibility, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
           Minimum="{Binding ProgressBarValueMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
           Maximum="{Binding ProgressBarValueMax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
           Value="{Binding ProgressBarValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
           Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="5" Height="8" Width="550">
            <ProgressBar.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="DarkGreen" Offset="0" />
                    <GradientStop Color="LightGreen" Offset="1" />
                </LinearGradientBrush>
            </ProgressBar.Foreground>
        </ProgressBar>
    </Grid>
</UserControl>
