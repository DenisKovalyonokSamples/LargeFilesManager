<Window x:Class="LFM.FileGenerator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LFM.FileGenerator.UI"
        mc:Ignorable="d"
           Title="Files Generator" Height="450" Width="800"
         Style="{StaticResource CustomWindowStyle}">
    <Window.Resources>
        <DropShadowBitmapEffect x:Key="NormalShadow" ShadowDepth="2" Softness="0.2" Opacity="0.64"/>
    </Window.Resources>
    <Grid>
        <TabControl x:Name="tabControl" Margin="0,10,0,0">
            <TabItem Header="File Generator">
                <Grid Background="#FF333333">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="71*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="File Parser">
                <Grid Background="#FF333333">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="29*"/>
                        <ColumnDefinition Width="763*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>
        <GroupBox x:Name="groupBox" Header="File Information" Margin="10,47,10,185">
            <StackPanel>
                <Label x:Name="label" Content="Name" HorizontalAlignment="Left" Height="27" Width="45"/>
                <TextBox x:Name="textBox" TextWrapping="Wrap" Text="TextBox" Width="122" Height="22"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
