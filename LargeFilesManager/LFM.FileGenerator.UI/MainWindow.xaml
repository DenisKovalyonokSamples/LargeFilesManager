<Window x:Class="LFM.FileGenerator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i18n="clr-namespace:Lepo.i18n.Wpf;assembly=Lepo.i18n.Wpf"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LFM.FileGenerator.UI"
        xmlns:controls="clr-namespace:LFM.Core.Controls;assembly=LFM.Core"
        ResizeMode="NoResize"
        WindowState="Normal"
        mc:Ignorable="d"
        Title="File Generator" Height="340" Width="800"
        Style="{StaticResource CustomWindowStyle}">
    <Window.Resources>
        <DropShadowBitmapEffect x:Key="NormalShadow" ShadowDepth="2" Softness="0.2" Opacity="0.64"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <GroupBox x:Name="groupBox" Header="File Information" Margin="10,10,10,-20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="{i18n:StringLocalizer 'Folder Path'}" HorizontalAlignment="Right" />

                    <TextBox Grid.Row="0" Grid.Column="1" Name="SelectedFolderText" Width="550" Height="22"
                        Text="{Binding FilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <Button Grid.Row="0" Grid.Column="2" Name="BrowseFolderButton" Height="22" 
                        Command="{Binding BrowseFolderCommand}" Margin="5,2,-6,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{i18n:StringLocalizer 'Browse'}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Label Grid.Row="1" Grid.Column="0" Content="{i18n:StringLocalizer 'File Name'}" HorizontalAlignment="Right" />

                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBox Name="TextFileNameBox" Text="{Binding FileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="380" Height="22" />
                        <Label Grid.Row="2" Grid.Column="0"  Content="{i18n:StringLocalizer 'File Size'}" HorizontalAlignment="Right"/>
                        <xctk:IntegerUpDown Value="{Binding FileSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            Width="60" Minimum="0" Maximum="500" Height="22" Background="#FF2D2D2D" BorderBrush="#FF2F2F2F" Foreground="White"/>
                        <ComboBox ItemsSource="{Binding FileSizeTypes}"
                          SelectedItem="{Binding SelectedFileSizeType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Width="50" Height="22" Margin="10 0 0 0" />
                    </StackPanel>
                </Grid>
            </GroupBox>
            <StackPanel VerticalAlignment="Top">
                <Button Grid.Row="2" Grid.Column="1" Name="GenerateFileButton" Height="22" Width="120" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Command="{Binding GenerateTextFileCommand}" Margin="5,35,10,2" Background="Green">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{i18n:StringLocalizer 'Generate Text File'}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <GroupBox x:Name="groupBoxone" Header="Generation progress" Margin="10,10,10, 20">
                    <controls:ProgressPanel />
                </GroupBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
